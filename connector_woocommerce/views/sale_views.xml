<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_connector_form" model="ir.ui.view">
        <field name="name">sale.order.connector.inherit.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id"
               ref="connector_ecommerce.view_order_connector_form"/>
        <field name="arch" type="xml">
            <page name="connector" position="attributes">
                <attribute name="invisible">0</attribute>
            </page>
            <page name="connector" position="inside">
                <group>
                    <field name="sync_data"/>
                    <field name="woo_backend_id" options="{'no_open': True}"
                           attrs="{'invisible':[('sync_data', '!=', True)], 'required':[('sync_data', '=', True)]}"/>
                </group>
            </page>
        </field>
    </record>

</odoo>
