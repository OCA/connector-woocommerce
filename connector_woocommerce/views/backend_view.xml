<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_wc_backend_tree" model="ir.ui.view">
        <field name="name">woo.backend.tree</field>
        <field name="model">woo.backend</field>
        <field name="type">tree</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree string="Backend">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_wc_backend_form" model="ir.ui.view">
        <field name="name">woo.backend.form</field>
        <field name="model">woo.backend</field>
        <field name="type">form</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form string="Backend">
                <header>
                    <button string="Check Connection" class="oe_highlight"
                            type="object" name="test_connection"/>
                </header>
                <sheet>
                    <label string="Name"/>
                    <h1>
                        <field name="name" required="1"/>
                    </h1>
                    <separator string="Configuration" colspan="4"/>
                    <group col="2">
                        <field name="location" required="1"/>
                        <field name="consumer_key" required="1"/>
                        <field name="consumer_secret" required="1"/>
                        <field name="version"/>
                        <field name="verify_ssl"/>
                        <field name="default_lang_id"/>
                    </group>
                    <notebook>
                        <page string="Import" name="import">
                            <group>
                                <label string="Import category"
                                       class="oe_inline"/>
                                <button name="import_categories" type="object"
                                        class="oe_highlight"
                                        string="Import in background"/>
                            </group>
                            <group>
                                <label string="Import Product"
                                       class="oe_inline"/>
                                <button name="import_products" type="object"
                                        class="oe_highlight"
                                        string="Import in background"/>
                            </group>
                            <group>
                                <label string="Import Customers"
                                       class="oe_inline"/>
                                <button name="import_customers" type="object"
                                        class="oe_highlight"
                                        string="Import in background"/>
                            </group>
                            <group>
                                <label string="Import Sale Orders"
                                       class="oe_inline"/>
                                <button name="import_orders" type="object"
                                        class="oe_highlight"
                                        string="Import in background"/>
                            </group>
                        </page>
                        <page string="Export" name="export">
                            <group>
                                <label string="Export category"
                                       class="oe_inline"/>
                                <button name="export_category" type="object"
                                        class="oe_highlight"
                                        string="Export in background"/>
                            </group>
                            <group>
                                <label string="Export Product"
                                       class="oe_inline"/>
                                <button name="export_product" type="object"
                                        class="oe_highlight"
                                        string="Export in background"/>
                            </group>
                            <group>
                                <label string="Export Customers"
                                       class="oe_inline"/>
                                <button name="export_customer" type="object"
                                        class="oe_highlight"
                                        string="Export in background"/>
                            </group>
                            <group>
                                <label string="Export Sale Orders"
                                       class="oe_inline"/>
                                <button name="export_saleorder" type="object"
                                        class="oe_highlight"
                                        string="Export in background"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_open_wc_backend_view">
        <field name="name">Backend</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">woo.backend</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.actions.act_window.view"
            id="act_open_wc_backend_view_form">
        <field name="act_window_id" ref="act_open_wc_backend_view"/>
        <field name="sequence" eval="20"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_wc_backend_form"/>
    </record>

    <record model="ir.actions.act_window.view"
            id="act_open_wc_backend_view_tree">
        <field name="act_window_id" ref="act_open_wc_backend_view"/>
        <field name="sequence" eval="10"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_wc_backend_tree"/>
    </record>

    <menuitem id="menu_wc_backend" parent="connector.menu_connector"
              name="Backend" action="act_open_wc_backend_view"
              groups="connector.group_connector_manager"
              sequence="20"/>

</odoo>
